---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - Public Square TO` : "Public Square TO"}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  :root {
    --theme-primary: #00bc7d;
    --theme-light: #e0f7ef;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    margin: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  h1 {
    font-size: 2.5rem;
  }
  h2 {
    color: var(--theme-primary);
  }
  p {
    font-size: 1.2rem;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
  }
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: white;
  }
</style>
